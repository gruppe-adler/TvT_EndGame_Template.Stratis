params ["_markerPos" , "_type"];

private _markerColor = "";
private _markerName = "";
private _markerType = "";

if (_type) then {
   _markerColor = "ColorCivilian";
   _markerName = "CivKills";
   _markerType = "KIA";
}else{
   _markerColor = "ColorUnknown";
   _markerName = "Gunfight";
   _markerType = "hd_warning";
};

private _marker = createMarkerLocal [format["%1_shape_%2",_markerPos],_markerPos];
_marker setMarkerShapeLocal "ELLIPSE";
_marker setMarkerColorLocal _markerColor;
_marker setMarkerSizeLocal [200,200];

private _marker2 = createMarkerLocal [format["civkill_icon_%1",_markerPos],_markerPos];
_marker2 setMarkerShapeLocal "ICON";
_marker2 setMarkerTypeLocal _markerType;
_marker2 setMarkerColorLocal _markerColor;

private _markerAlpha = 0.5;

diag_log format ["%1: Marker %2 created",_markerName, _marker];

for "_i" from 0 to 49 do {
   _markerAlpha = _markerAlpha - 0.01;
   _marker setMarkerAlphaLocal _markerAlpha;
   sleep 2;
};
deleteMarkerLocal _marker;
deleteMarkerLocal _marker2;
